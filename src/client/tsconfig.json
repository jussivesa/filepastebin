{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "baseUrl": "./",
    "outDir": "../../dist/client/",
    "sourceMap": true,
    "declaration": true,
    "module": "umd",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "composite": true,
    "importHelpers": false,
    "allowJs": false,
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": ["javascript/**/*"],
  "references": [{ "path": "../../tsconfig.json" }]
}
