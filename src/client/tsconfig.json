{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "baseUrl": "./",
    "outDir": "./dist/public/javascript",
    "sourceMap": true,
    "declaration": false,
    "module": "umd",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowJs": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": ["./javascript/**/*"]
}
