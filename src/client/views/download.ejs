<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, height=device-height"/>
    <link rel="stylesheet" type="text/css" href="styles/common.css">
    <link rel="stylesheet" type="text/css" href="styles/down.css">
    <title>FilePasteBin</title>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-134611312-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-134611312-1');
    </script>
</head>
<body>

<% if (dev) { %>

<!-- Dev Layout -->

<h1>FilePasteBin</h1>
<h1 id="code"><%= code %></h1>
<h1 id="file-name"><%= fileName %></h1>
<h1 id="progress">0%</h1>
<button id="download" disabled>Download</button>

<% } else { %>

<!-- Actual Layout -->

<div id="container">
    <div class="column ad side">
        <div class="line left"></div>
    </div>
    <div class="column center">
        <div id="top-bar">
            <div id="mini-logo">
                <span class="mini-title front">File</span><span class="mini-title end">PasteBin</span>
            </div>
        </div>
        <div class="center">
            <div class="transition-wrapper">
                <div id="reveal" class="center">
                    <div id="progress">0%</div>
                    <div id="download-speed">1 mb/s</div>
                </div>
                <div id="text-wrapper" class="slide-down center">
                    <div id="file-name"><%= fileName%></div>
                    <div id="file-size"><%= fileSize%></div>
                </div>
            </div>
            <div class="center-wrapper">
                <button id="download" class="blue-round">Download</button>
            </div>
        </div>
    </div>
    <div class="column ad side">
        <div class="line right"></div>
    </div>
</div>
<div id="code" style="display: none"><%= code%></div>


<% }%>

<script src="/javascript/download.js"></script>
<script src="/javascript/adapter.js"></script>
<script src="socket.io/socket.io.js"></script>
<script src="/javascript/down.js"></script>
</body>
</html>